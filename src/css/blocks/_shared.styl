section.block
	span(1)
	&.w_25
		span(1/4)
		+below($md)
			stack()
	&.w_50
		span(1/2)
		+below($md)
			stack()
	&.w_100
		span(1)

.spaced
	& > section.block
		.w_50
			+above($md + 1)
				width 'calc(50% - %s)' % ($content-space/2)
				&:nth-child(odd)
					margin-right ($content-space/2)
				&:nth-child(even)
					margin-right 0
					margin-left ($content-space/2)
				&:not(:nth-last-child(-n+2))
					margin-bottom $content-space
			+below($md)
				&:not(:last-child)
					margin-bottom $content-space
		&:not(:last-child)
			margin-bottom $content-space

.block--content
	span(1)
	position relative

.block--link
	position absolute
	top 0
	left 0
	width 100%
	height 100%
	z-index 10

.block--footer
	span(1)
	position relative

.block--caption
	text-transform uppercase
	padding $text-padding 0
	padding-left $padding

.checkerboard
	position absolute
	top 0
	left 0
	right 0
	bottom 0
	background-size 16px
	image-rendering -moz-pixelated
	image-rendering -o-pixelated
	image-rendering -webkit-optimize-contrast
	image-rendering pixelated
	background-position center
	background-image url('../images/checkerboard_64.png')
	pointer-events none
	z-index 10
