header
	position fixed
	top 0
	left 0
	width 100%
	padding 0 $padding-x
	display flex
	z-index 100
	background $primary
	// justify-content space-between
	hideselect()
	+below($md)
		flex-direction column
		padding 0 $padding-mobile-x
		&:not(.opened)
			nav#menu, .secondary-menu
				display none !important
	#site-title
		position relative
		display block
		height (0.9rem + $padding-y*2)
		padding-top $padding-y
		padding-bottom $padding-y
		z-index 1
		+below($md)
			height 1.1rem
			padding-top 0
			padding-bottom 0
			margin-top $padding-y
			margin-bottom $padding-y
		svg
			display block
			height 0.9rem
			+below($md)
				height 1.1rem
	nav#menu, .menu-secondary
		display flex
		margin-left $padding-x
		+below($md)
			position fixed
			left 0
			top 2.5rem
			margin-left 0
			padding-left $padding-mobile-x
			padding-right $padding-mobile-x
			padding-bottom $padding-mobile-x
			flex-direction column
			background $primary
			width 100%
			z-index 100
		& > a, & > span, & > input, & > button
			white-space nowrap
			display inline-block
			// transition color 300ms ease
			padding-top $padding-y
			padding-bottom $padding-y
			+below($md)
				padding-top ($padding-y/2)
				padding-bottom ($padding-y/2)
				&:first-child
					padding-top 0
		& > a, & > span
			&:not(:last-child)
				padding-right ($content-space/2)
			&:not(.active)
				color $gray
		& > input, & > button
			padding-bottom ($padding-y - 0.2)
	.menu-secondary
		display none
		.title
			color $secondary !important
			padding-right 0
			margin-right $padding-x
			+below($md)
				margin-right ($content-space/2)
	#languages
		flex 1
		text-align right
	#newsletter
		input
			width 6.9rem
			margin-right ($content-space/2)
		button[type=submit]
			color $gray
	&.secondary, &[data-state=secondary]
		nav#menu
			display none
		nav#menu-secondary
			display flex
	&.follow, &[data-state=follow]
		nav#menu
			display none
		nav#follow
			display flex
	&.search, &[data-state=search]
		nav#menu
			display none
		form#search
			display flex
	&.newsletter, &[data-state=newsletter]
		nav#menu
			display none
		form#newsletter
			display flex
	&.opened
		#burger
			&::before
				background url('../svg/cross.svg')
	+below($md)
		&:not(.opened)
			nav#menu, .menu-secondary
				display none !important

$burgerTransition = 0ms
$burgerSize = 15px

#burger
	position fixed
	top 0
	right 0
	padding ($padding-y - 0.1) $padding-mobile-x
	z-index 2
	+above($md + 1)
		display none
	&::before
		content ''
		width $burgerSize
		height $burgerSize
		background url('../svg/burger.svg')
		background-position center
		background-repeat no-repeat
		display inline-block
		vertical-align middle

#menu-overlay
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	visibility hidden
	background alpha($secondary, 0.4)
	z-index 99

[page-type=home]
	nav#menu
		a, span
			color $secondary !important

+below($md)
	[page-type=artist],
	[page-type=artwork],
	[page-type="artwork.exhibition"]
		header[data-state=secondary]
			nav#menu,
			nav#menu-secondary
				display flex
				position initial
				padding-left 0


