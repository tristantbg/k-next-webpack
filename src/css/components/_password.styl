#password-protected
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	display flex
	justify-content center
	align-items center
	color $secondary
	form
		width 30rem
		input, button
			width 100%
			appearance none
			border 1px solid
			background none
			margin 0
			padding 1rem
			color inherit
			font-family inherit
			font-size inherit
			text-align center
			&:focus, &:active
				box-shadow 0
				outline 0
			&:not([type=hidden])
				&+ input, &+ button
					border-top 0
			&[type=password]
				font-size 1.5rem
				padding 1rem 1rem 0.7rem
			&[type=submit]
				cursor pointer