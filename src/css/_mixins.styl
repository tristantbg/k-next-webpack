// Example: webfont('Franklin Gothic', 'franklingothic', true, 'bold')

font-url(file)
	return '../fonts/' + file

webfont(family, file, hack-chrome-windows = false, weight = 'normal', style = 'normal')
	@font-face
		font-family family
		src url(font-url(file + '.eot')) format("eot"),
			url(font-url(file + '.eot?#iefix')) format('embedded-opentype'),
			url(font-url(file + '.woff')) format('woff'),
			url(font-url(file + '.woff2')) format('woff2')
		font-weight weight
		font-style normal
	if hack-chrome-windows
		@media screen and (-webkit-min-device-pixel-ratio:0)
			@font-face
				font-family family
				src url(font-url(file + '.svg#'+ family)) format('svg')


 // First paragraph is flush, all paragraphs after are indented
 // Example: .paragraph
 // 			flowing-paragraph(0.5em)

flowing-paragraph(n)
	p
		margin-bottom: 0
	p + p
		text-indent: (n)

// Control type size and spacing for abbreviations
// Example: .paragraph
// 				abbreviation(26px,0.4em)

abbr(type-size, kerning)
	abbr
		font-size: type-size
		letter-spacing: kerning

// Antialiasing applied to light type on dark backgrounds
// Example: .paragraph
// 				font-smooth()

font-smoothing()
	-webkit-font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;


// Vertical and horizontal centering, use sparingly as it degrade type integrity
// Example: .element
// 				dead-center(fixed)

hideselect()
	-webkit-backface-visibility hidden
	backface-visibility hidden
	-webkit-user-select none
	-moz-user-select none
	-ms-user-select none
	user-select none
	-webkit-transform-style flat
	transform-style flat
	-webkit-tap-highlight-color transparent
	-webkit-user-drag none
	outline 0

dead-center(position)
	position: position
	top: 50%
	left: 50%
	transform: translate(-50%,-50%)

vendor(prop, args)
	-webkit-{prop} args
	-moz-{prop} args
	-ms-{prop} args
	-o-{prop} args
	{prop} args

play-button(size = 75px, play-size = 15px, background = transparent, foreground = black)
	width: size;
	height: size;
	background: background;
	border: none;
	margin: auto;
	cursor: pointer;
	position: absolute;
	left: 50%;
	top: 50%;
	transform: translate3d(-50%, -50%, 0);
	&:focus
		outline: 0;
	&::after
		content: '';
		display: inline-block;
		position: absolute;
		top: 50%;
		left: 50%;
		transform translate3d(-36%, -50%, 0)
		border-style: solid;
		border-width: (play-size / 3 * 2) 0 (play-size / 3 * 2) play-size;
		border-color: transparent transparent transparent foreground;
