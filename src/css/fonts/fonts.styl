webfont('UR', 'UR')
webfont('URI', 'URI')

text()
	font-family UR, sans-serif
	.italic, em, i
		font-family URI, sans-serif

// Main font styles

::selection
	background alpha($secondary, 0.5)

::-moz-selection
	background alpha($secondary, 0.5)

body,html
	-webkit-text-size-adjust 100%

html
	font-size 12px
	+above($xxl + 1)
		font-size 0.8vw
	+below($md)
		font-size 12px

body
	text()
	font-size $normal
	line-height 1
	font-smoothing()

p
	line-height inherit
	&:not(:last-child)
		margin-bottom 1em

.uppercase
	text-transform uppercase

.text-center
	text-align center
